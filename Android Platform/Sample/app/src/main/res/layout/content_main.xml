<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/sdk_bg_light_blue">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusableInTouchMode="true"
            android:padding="20dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:textAppearance="@style/MyFont_Bold"
                android:textColor="@color/sdk_blue"
                android:textSize="15sp"
                android:text="@string/title"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textAppearance="@style/MyFont_Bold"
                    android:textColor="@color/sdk_blue"
                    android:textSize="15sp"
                    android:text="@string/payment_id"
                    />

                <TextView
                    android:id="@+id/tv_payment_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textAppearance="@style/MyFont_Bold"
                    android:textColor="@color/sdk_red"
                    android:textSize="15sp"
                    android:text=" --/--"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textAppearance="@style/MyFont_Bold"
                    android:textColor="@color/sdk_blue"
                    android:textSize="15sp"
                    android:text="@string/error_message"
                    />

                <TextView
                    android:id="@+id/tv_error_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textAppearance="@style/MyFont_Bold"
                    android:textColor="@color/sdk_red"
                    android:textSize="15sp"
                    android:text=" --/--"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:textAppearance="@style/MyFont_Bold"
                android:textColor="@color/sdk_blue"
                android:textSize="12sp"
                android:text="@string/fixed_amount"
                />

            <EditText
                android:id="@+id/et_fixed_amount"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="5dp"
                android:hint="0"
                android:inputType="numberDecimal"
                android:layout_marginTop="5dp"
                android:textAppearance="@style/MyFont_SemiBold"
                android:textColor="@color/sdk_text_dark"
                android:textSize="15sp"
                android:background="@drawable/bg_rounded_edittext_selector"/>

            <RelativeLayout
                android:id="@+id/rl_open_sdk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_white_rounded_selector">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textAppearance="@style/MyFont_Bold"
                    android:textColor="@color/sdk_blue"
                    android:textSize="13sp"
                    android:text="@string/open_sdk"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_change_sdk_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_white_rounded_selector">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textAppearance="@style/MyFont_Bold"
                    android:textColor="@color/sdk_blue"
                    android:textSize="13sp"
                    android:text="@string/change_sdk_language"
                    />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>